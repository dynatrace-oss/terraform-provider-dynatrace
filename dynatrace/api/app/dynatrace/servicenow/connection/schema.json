{
	"allowedScopes": [
		"environment"
	],
	"constraints": [
		{
			"checkAllProperties": false,
			"customMessage": "The ServiceNow URL has changed. Please re-enter your credentials.",
			"type": "SECRET_RESUBMISSION"
		}
	],
	"description": "Connections allow you to integrate into ServiceNow.",
	"displayName": "ServiceNow Connections",
	"documentation": "",
	"dynatrace": "1",
	"enums": {
		"Type": {
			"description": "",
			"displayName": "Type",
			"documentation": "",
			"items": [
				{
					"displayName": "Basic Authentication",
					"value": "basic"
				}
			],
			"type": "enum"
		}
	},
	"maxObjects": 100,
	"metadata": {
		"appName": "ServiceNow"
	},
	"multiObject": true,
	"ordered": false,
	"ownerBasedAccessControl": true,
	"properties": {
		"name": {
			"constraints": [
				{
					"type": "NOT_BLANK"
				},
				{
					"customMessage": "Name has to be between 1 and 100 characters long",
					"maxLength": 100,
					"minLength": 1,
					"type": "LENGTH"
				}
			],
			"default": "",
			"description": "A unique and clearly identifiable connection name to your ServiceNow instance.",
			"displayName": "Connection name",
			"documentation": "",
			"maxObjects": 1,
			"modificationPolicy": "DEFAULT",
			"nullable": false,
			"type": "text"
		},
		"password": {
			"constraints": [
				{
					"type": "NOT_BLANK"
				},
				{
					"maxLength": 500,
					"minLength": 1,
					"type": "LENGTH"
				}
			],
			"default": "",
			"description": "Password of the ServiceNow user.",
			"displayName": "Password",
			"documentation": "",
			"maxObjects": 1,
			"modificationPolicy": "DEFAULT",
			"nullable": false,
			"precondition": {
				"expectedValues": [
					"basic"
				],
				"property": "type",
				"type": "IN"
			},
			"type": "secret"
		},
		"type": {
			"default": "basic",
			"description": "Type of authentication method that should be used.",
			"displayName": "Type",
			"documentation": "",
			"maxObjects": 1,
			"modificationPolicy": "DEFAULT",
			"nullable": false,
			"type": {
				"$ref": "#/enums/Type"
			}
		},
		"url": {
			"constraints": [
				{
					"type": "NOT_BLANK"
				},
				{
					"customMessage": "URL cannot contain whitespaces",
					"type": "NO_WHITESPACE"
				},
				{
					"customMessage": "The ServiceNow URL must be secure (https://) and must not contain a trailing slash.",
					"pattern": "^https://.*[^/]$",
					"type": "PATTERN"
				},
				{
					"customMessage": "Not a valid URI",
					"pattern": "^(([^\\s:/?#]+?):){1}((//)?([^\\s/?#]+?)){1}([^\\s?#]*?)(\\?([^\\s#]*?))?(#([^\\s]*?))?$",
					"type": "PATTERN"
				},
				{
					"customMessage": "Not a valid http(s) URL",
					"pattern": "^https?://.*$",
					"type": "PATTERN"
				},
				{
					"maxLength": 500,
					"minLength": 1,
					"type": "LENGTH"
				}
			],
			"default": "",
			"description": "URL of the ServiceNow instance.",
			"displayName": "ServiceNow instance URL",
			"documentation": "",
			"forceSecretResubmission": true,
			"maxObjects": 1,
			"modificationPolicy": "DEFAULT",
			"nullable": false,
			"subType": "url",
			"type": "text"
		},
		"user": {
			"constraints": [
				{
					"type": "NOT_BLANK"
				},
				{
					"maxLength": 500,
					"minLength": 1,
					"type": "LENGTH"
				}
			],
			"default": "",
			"description": "Username or Email address.",
			"displayName": "User",
			"documentation": "",
			"maxObjects": 1,
			"modificationPolicy": "DEFAULT",
			"nullable": false,
			"precondition": {
				"expectedValues": [
					"basic"
				],
				"property": "type",
				"type": "IN"
			},
			"type": "text"
		}
	},
	"schemaConstraints": [
		{
			"customMessage": "A connection with the same name already exists. Please provide a different name.",
			"type": "UNIQUE",
			"uniqueProperties": [
				"name"
			]
		}
	],
	"schemaId": "app:dynatrace.servicenow:connection",
	"types": {},
	"version": "2"
}